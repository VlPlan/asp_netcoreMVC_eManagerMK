
@using eManager.WebModels;
@model EmployeeViewModel

@{
    ViewBag.Title = "Избриши вработен од активност";
    Layout = "_Layout";

}

<div class="modal fade" id="removeEmployeeFromActivityModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">

                <h4 class="modal-title">Дали сте сигурни дека сакате да го избришете @Model.FirstName @Model.LastName од активноста?</h4>
            </div>

            <div class="modal-body">
                <form method="post" asp-controller="Employee" asp-action="RemoveEmployeeFromActivity">
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger">Избриши</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal" onclick="location.href='@Url.Action("EmployeesActivities", "Employee")'">Врати</button>
                </form>


            </div>

        </div>
    </div>
</div>



<script>
    $(function () {
        $("#removeEmployeeFromActivityModal").modal();
    });








</script>


