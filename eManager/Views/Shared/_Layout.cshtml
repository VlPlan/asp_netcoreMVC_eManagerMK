<!DOCTYPE html>



<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>ОГНООТПОРНО СКОПЈЕ</title>

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" type="text/css" href=@Url.Content("~/vendor/bootstrap/css/bootstrap.min.css")>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href=@Url.Content("~/css/business-frontpage.css")>
    <script type="text/javascript" src=@Url.Content("//ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js")></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>



</head>

<body>


    <nav class="navbar navbar-expand-sm bg-white navbar-light">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="~/images/logo.png" width="80" height="60" />
            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">


                <ul class="navbar-nav">

                    <li class="nav-item active"><a asp-controller="Home" asp-action="Index">Дома</a></li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-toggle="dropdown">Авторизација</a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Roles" asp-action="AllUsers">Корисници</a></li>
                                    <li><a class="dropdown-item" asp-controller="Roles" asp-action="AllRoles">Тикети за авторизација</a></li>
                                    <li><a class="dropdown-item" asp-controller="Roles" asp-action="CreateRole">Креирај Тикет</a></li>

                                </ul>
                            </li>
                        }
                        if (User.IsInRole("admin") || User.IsInRole("userVP") || User.IsInRole("userSN") || User.IsInRole("userAMG") || User.IsInRole("userSP") || User.IsInRole("userTP") || User.IsInRole("userEN") || User.IsInRole("userDR") || User.IsInRole("userGK") || User.IsInRole("userKK"))

                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-toggle="dropdown">Активности</a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Employee" asp-action="AddActivity">Внеси активност</a></li>
                                    <li><a class="dropdown-item" asp-controller="Employee" asp-action="EmployeesActivities">Сите активности</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-toggle="dropdown">Продажба</a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Service" asp-action="Services">Услуги</a></li>
                                    <li><a class="dropdown-item" asp-controller="Client" asp-action="ShowClients">Клиенти</a></li>
                                    <li><a class="dropdown-item" asp-controller="Invoice" asp-action="Invoices">Фактури</a></li>
                                    <li><a class="dropdown-item" asp-controller="Invoice" asp-action="CurrentInvoice">Внеси фактура</a></li>
                                    <li><a class="dropdown-item" asp-controller="Invoice" asp-action="SalesReport">Извештај</a></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Employee" asp-action="ShowEmployees">Вработени</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-toggle="dropdown">Набавки</a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Product" asp-action="Products">Продукти</a></li>
                                    <li><a class="dropdown-item" asp-controller="Procurement" asp-action="AllProcurements">Сите набавки</a></li>
                                    <li><a class="dropdown-item" asp-controller="Procurement" asp-action="Procurement">Статус на набавка</a></li>
                                    <li><a class="dropdown-item" asp-controller="Company" asp-action="ShowCompanies">Добавувачи</a></li>

                                </ul>
                            </li>
                            <li class="nav-item"><a class="nav-link" asp-controller="User" asp-action="LogOut">Одјави се</a></li>
                            <li class="nav-link"><a class="nav-link" asp-controller="User" asp-action="ResetPassword"><small>Промени лозинка</small></a></li>
                            <li class="nav-link" style="color:dodgerblue;"><em><small>     Најавен како @User.Identity.Name</small></em></li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="User" asp-action="LogOut">Одјави се</a></li>
                            <li class="nav-link"><a class="nav-link" asp-area="" asp-controller="User" asp-action="ResetPassword"><small>Промени лозинка</small></a></li>
                            <li class="nav-link" style="color:dodgerblue;"><em><small>     Најавен како @User.Identity.Name</small></em></li>
                        }


                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="User" asp-action="LogIn">Најави се</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="User" asp-action="Register">Регистрирај се</a></li>

                    }





                </ul>
            </div>
        </div>
    </nav>



    <br />
    <br />


    @RenderBody()

    <br />
    <br />
    <br />

    <!-- /.container -->
    <!-- Footer -->
    <footer class="py-5 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white"> <small>OGNOOTPORNO REFRACTORY SERVICES - SKOPJE</small></p>
            <p class="m-0 text-center text-white"><small> &copy; VPlan 2020</small></p>
        </div>
        <!-- /.container -->
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src=@Url.Content("//ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js")></script>
    <script src=@Url.Content("~/vendor/bootstrap/js/bootstrap.js")></script>
    @await Component.InvokeAsync("NToastNotify")
    @RenderSection("Scripts", required: false)
</body>

</html>


<style>

    $(function(){
        $(".dropdown").hover(
          function() {
            $('.dropdown-menu', this).stop( true, true ).fadeIn("fast");
            $(this).toggleClass('open');
            $('b', this).toggleClass("caret caret-up");
          },
          function() {
            $('.dropdown-menu', this).stop( true, true ).fadeOut("fast");
            $(this).toggleClass('open');
            $('b', this).toggleClass("caret caret-up");
          });
      });
</style>