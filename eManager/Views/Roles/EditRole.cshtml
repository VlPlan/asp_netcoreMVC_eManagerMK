@using eManager.WebModels;
@model EditUserRoleViewModel

@{ 
    ViewBag.Title = "Edit Role";
}

<h1>Ажурирај тикет за авторизација</h1>

<form method="post" class="mt-3">
<div class="form-group row">
    <label asp-for="Id" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <input asp-for="Id" disabled class="form-control" />
    </div>
</div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Ажурирај</button>
            <a asp-action="AllRoles" asp-controller="Roles" class="btn btn-primary">Откажи</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Корисници регистрирани како @Model.RoleName</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach(var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-text">Нема авторизирани корисници во оваа категорија!</h5>
            }

        </div>
        <div class="card-footer">
            <a asp-action="UserInRole" asp-controller="Roles" asp-route-roleId ="@Model.Id" class="btn btn-primary" style="width:auto">Додади/Одземи авторизација</a>
        </div>
    </div>
</form>
