@using eManager.WebModels;
@model EditUserViewModel

@{ 
    ViewBag.Title = "Edit user";
}

<h1>Ажурирај податоци за корисник</h1>

<form method="post" class="mt-3">
<div class="form-group row">
    <label asp-for="Id" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <input asp-for="Id" disabled class="form-control" />
    </div>
</div>
    <div class="form-group row">
        <label asp-for="FullName" class="col-sm-6 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>
    
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Ажурирај</button>
            <a asp-action="AllUsers" class="btn btn-primary">Откажи</a>
        </div>
    </div>

    <div class="form-group row">
        <h3>Авторизација за корисникот</h3>
    </div>
    <div class="card">
        <div class="card-body">
            @if (Model.Roles.Any())
            {
                foreach (var role in Model.Roles)
                {
                    <h5 class="card-title">@role</h5>
                }
            }
            else
            {
                <h5 class="card-title">Не е доделен тикет за авторизација на корисникот!</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-action="ManageUserRole" asp-controller="Roles" asp-route-userId="@Model.Id" style="width:auto" class="btn btn-primary">Додели авторизација за корисникот</a>
        </div>
    </div>
    <div class="card mt-3">
        <div class="card-header">Дозволи за корисник</div>
    </div>
    <div class="card-body">
        @if (Model.Claims.Any())
        {
            foreach (var claim in Model.Claims)
            {
                <h5 class="card-title">@claim</h5>
            }
        }
        else
        {
            <h5 class="card-title">Не е доделена дозвола на корисникот!</h5>
        }
    </div>
</form>